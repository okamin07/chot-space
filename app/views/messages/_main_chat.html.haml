.mainchat
  .mainchat__header
    .group-top
      = @group.name
      %ul.member
        Member：
        - @group.users.each do |users|
          = users.name
    .group-edit
      = link_to edit_group_path(@group) do
        Edit
  .messages
    = render @messages    #- @messages.each do |message|と同義

  .form
    = form_for [@group, @message] do |f|
      .input-box
        .formbox
          = f.text_field :content, class: 'text', placeholder: 'type a message'
          = f.label :image, class: 'image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'file'
        = f.submit 'Send', class: 'submit'
  